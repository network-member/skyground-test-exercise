{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@root/*": ["./*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "allowJs": true
    }
  }
}
